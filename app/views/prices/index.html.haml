%div#main{ role: 'main' }
  #main-content
    .container
      .row
        .col-sm-12
          .page-header.page-header-with-icon.no-mg-t
            %i.fa-icon-suitcase
            %h2
              = @page.title
          .row
            .col-sm-12
              != @page.body
              - unless @page.body.blank?
                %hr
    .container
      .row
        .col-sm-12
          .row
            - @prices.each do |price|
              = link_to price.file.url, class: 'btn btn-bordered btn-default downloaded_price' do
                = price.name
                %i.fa-icon-download-alt
